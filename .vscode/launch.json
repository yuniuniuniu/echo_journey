{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "echo_journey.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8009"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_process.py",
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "/root/echo_journey"
        },
    ]
}